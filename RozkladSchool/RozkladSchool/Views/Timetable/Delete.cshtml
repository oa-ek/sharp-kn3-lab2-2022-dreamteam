@using Rozklad.Repository.Dto.TimetableDto

@model TimetableReadDto

@{
     Layout = "/Views/Shared/_DashminBlankLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">

<h1>Confirm delete</h1>
<hr/>

<p> <h5>Назва дисципліни: @Model.DisciplineName</h5>
    <h5>Назва кабінета: @Model.CabinetName</h5>
    <h5>@Model.LessonName</h5>
    <h5>Назва вчителя: @Model.TeacherName</h5> </p>

<hr />
<form asp-action="ConfirmDelete" class="col-mb-4">
    @Html.AntiForgeryToken()
    <input asp-for="TimetableId" type="hidden"/>
    <button type="submit" class="btn btn-sm btn-danger">Видалити оголошення</button>
</form>


@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $(".form-select").select2();
        });
    </script>
}